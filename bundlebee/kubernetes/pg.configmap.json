{
  "apiVersion": "v1",
  "kind": "ConfigMap",
  "metadata": {
    "name": "postgres-local-config",
    "labels": {
      "app": "postgres-local"
    }
  },
  "data": {
    "POSTGRES_DB": "postgres",
    "POSTGRES_USER": "postgres",
    "POSTGRES_PASSWORD": "postgres",
    "PGDATA": "/var/lib/postgresql/data/pgdata"
  }
}